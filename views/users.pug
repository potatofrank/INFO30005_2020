extends layout

block content
    h1 #{username}
    h2 Submit New Case Information
    form(name 'Case Info')
        fieldset
            legend Single Case Information

            |         ID:
            input(type = 'text',name = 'ID')
            br
            br

            |         Gender:
            select(name = 's1')
                option(selected='') Gender
                option(value = 'Male') Male
                option(value = 'Female') Female
